# Mobile API Gateway Configuration

# App Settings
APP_NAME=Mobile API Gateway
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings (PostgreSQL - same as main app)
DATABASE_URL=postgresql://postgres:example@localhost:5432/postgres

# Main App URL (for auth integration)
MAIN_APP_URL=http://localhost:3000

# Better Auth Settings (must match main app)
BETTER_AUTH_SECRET=your-secret-key-here

# Redis Settings (optional, for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# Compression Settings
COMPRESSION_MIN_SIZE=500
COMPRESSION_LEVEL=6

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Offline Sync Settings
SYNC_BATCH_SIZE=50
SYNC_CONFLICT_RESOLUTION=client_wins

# CORS Settings
CORS_ORIGINS=*
